<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">
    <ImageView
        android:id="@+id/ivStoreImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:background="#7f8fcf"/>
    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/ivStoreImage"
        android:layout_marginLeft="10dp"
        android:textColor="@color/name"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:text="Trần Tuna - Món ngon phố cổ Hà Nội"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold" />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="20dp"
         android:layout_below="@+id/tvStoreName"
         android:layout_toRightOf="@+id/ivStoreImage"
         android:layout_marginLeft="10dp"
         android:orientation="horizontal"
         android:id="@+id/llAddress"
         android:gravity="center_vertical">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="373-375 Ngô Quyền, Quận Sơn Trà, Đà Nẵng"
             android:maxLines="1"
             android:textSize="10dp"
             android:ellipsize="end"
             android:layout_weight="1"
             android:id="@+id/tvStoreAddress"
             android:layout_marginRight="5dp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:maxLines="1"
             android:text=">0.001km"
             android:textSize="10dp"
             android:id="@+id/tvStoreDistance"/>
     </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/llAddress"
        android:layout_toRightOf="@id/ivStoreImage"
        android:layout_marginLeft="10dp"
        android:textColor="@color/name"
        android:text="Bistro/Cafeteria"
        android:gravity="center_vertical"
        android:id="@+id/tvStoreType"
        android:textSize="10dp"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>