<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:padding="5dp">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivProductImage"
        android:background="@color/btDelete" />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/ivProductImage"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:id="@+id/llProductInformation">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:id="@+id/tvProductName"
            android:text="Product name"
            android:textStyle="bold"
            android:textColor="@color/name"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:text="Product price"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tvProductPrice"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/llProductInformation"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivDecreaseQuantity"
            android:src="@drawable/minus"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tvQuantity"
            android:text="123"
            android:textColor="@color/name"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivIncreaseQuantity"
            android:src="@drawable/plus"/>
    </LinearLayout>



</RelativeLayout>