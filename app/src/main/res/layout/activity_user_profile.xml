<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height='fill_parent'>

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="fill_parent"
        android:layout_height='fill_parent'
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/background"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:visibility="gone"
        tools:context="com.example.lungpanda.deliveryfast.ui.account.UserProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/backgroundTextView"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Full name"
                android:textColor="@color/name"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="SAVE"
                android:textColor="@color/name"
                android:textSize="20dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvUserInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="User Information"
            android:textSize="20dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1dp"
                android:background="@color/backgroundTextView"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:paddingLeft="3dp"
                    android:text="Username"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtUsername"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:hint="Username"
                    android:maxLines="1"
                    android:textSize="15dp" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="1dp"
                android:background="@color/backgroundTextView"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:text="First name"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:hint="First name"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textSize="15dp" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="1dp"
                android:background="@color/backgroundTextView"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:text="Last name"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:hint="Last name"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textSize="15dp" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="1dp"
                android:background="@color/backgroundTextView"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:text="Email"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:hint="Email"
                    android:maxLines="1"
                    android:textSize="15dp" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="1dp"
                android:background="@color/backgroundTextView"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:text="Gender"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rMale"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/rFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Female" />

                </RadioGroup>

            </TableRow>

            <TableRow
                android:layout_marginBottom="1dp"
                android:background="@color/backgroundTextView"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:text="Date of birth"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/edtDateOfBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:hint="Date of birth"
                    android:maxLength="10"
                    android:textSize="15dp" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:background="@color/backgroundTextView">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvManagePhone"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Manage phone number"
                    android:textColor="@color/tvColor" />

            </TableRow>

            <TableRow
                android:id="@+id/tbrMainPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/backgroundTextView"
                android:gravity="center">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/rlPhone"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="50dp"
                        android:text="Phone"
                        android:textColor="@color/name" />

                    <TextView
                        android:id="@+id/tvPhoneNumber"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@+id/tvTitle"
                        android:gravity="center"
                        android:text="01689200694" />

                    <ImageView
                        android:id="@+id/ivPrimaryKey"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="50dp"
                        android:layout_toRightOf="@+id/tvPhoneNumber"
                        android:src="@drawable/key" />

                </LinearLayout>

            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1dp"
                android:background="@color/backgroundTextView">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="0 Address"
                    android:textColor="@color/tvColor"
                    android:id="@+id/tvManageAddress"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlprogressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>